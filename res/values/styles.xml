<resources>

    <style name="Theme.Sylf" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_sylf</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Sylf</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Sylf</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Sylf</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Sylf</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Sylf</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_sylf</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_sylf</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Sylf</item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Sylf.Widget</item>
    </style>
<!-- @drawable/ab_stacked_solid_sylf -->
    <style name="ActionBar.Solid.Sylf" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_sylf</item>
        <item name="android:backgroundStacked">@color/dark</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_sylf</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Sylf</item>
    </style>

    <style name="ActionBar.Transparent.Sylf" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_sylf</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Sylf</item>
    </style>

    <style name="PopupMenu.Sylf" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_sylf</item>
    </style>

    <style name="DropDownListView.Sylf" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_sylf</item>
    </style>

    <style name="ActionBarTabStyle.Sylf" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_sylf</item>
    </style>

    <style name="DropDownNav.Sylf" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_sylf</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_sylf</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_sylf</item>
    </style>

    <style name="ProgressBar.Sylf" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_sylf</item>
    </style>

    <style name="ActionButton.CloseMode.Sylf" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_sylf</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Sylf.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Sylf</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Sylf</item>
    </style>
    
</resources>
